{% extends "::base.html.twig" %}

{% block title %}
AppBundle:ForumController:show
{% endblock %}

{% block body %}
<h1>Forum : {{ forum.title }}</h1>
        <form action="{{ path('app_forum_post', {id: forumId})}}" method="post">
            Ajouter un post : <br />
            Auteur : <input type="text" name="author" /><br />
            Titre : <input type="text" name="title" /><br />
            Date : <input type="text" name="date" /><br />
            <textarea type="text" name="content"></textarea><br />
            <input type="submit" value="Ajouter" />
        </form>
        
        <h2>Listes des posts :</h2>
        {% for post in forum.posts %}
        <div>
            <span>{{ post.title }} - Le {{ post.date }} : De {{ post.author }}</span><br />
            <code>
                {{ post.content }}
            </code>
        </div><br /><br />
        {% endfor %}
{% endblock %}